{
  "strict_mode": true,
  "rules": {
    "enable_https_check": {
      "enabled": true,
      "optional": false
    },
    "enable_public_access_check": {
      "enabled": true,
      "optional": true
    },
    "enable_replication_check": {
      "enabled": true,
      "optional": true
    },
    "check_open_ssh_ingress": {
      "enabled": true,
      "optional": true
    },
    "require_tags": {
      "enabled": false,
      "optional": false
    },
    "enforce_encryption": {
      "enabled": false,
      "optional": false
    },
    "sensitive_output_leak": {
      "enabled": true,
      "optional": true
    },
    "remote_module_source": {
      "enabled": true,
      "optional": true
    }
  }
}